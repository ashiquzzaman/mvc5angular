@model IEnumerable<AngujarCRUD.Models.Employee>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>
        <button class="btn btn-save" ng-click="editItem()">
            <span class="glyphicon glyphicon-plus"></span>
            Add New
        </button>
        @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table">
        <tr>
            <th>Check Box</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FatherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotherName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox"/></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FatherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MotherName)
                </td>
                <td>
                    <button ng-click="editItem(@Json.Encode(item))" class="btn btn-danger">
                        <i class="glyphicon glyphicon-edit"></i>
                    </button>
